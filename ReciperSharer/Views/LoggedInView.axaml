<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RecipeShare.ViewModels"
             x:DataType="vm:LoggedInViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RecipeShare.Views.LoggedInView">
   <DockPanel LastChildFill="True">
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#b4caec">
            <Button Content="Recipe" Margin="10"/>
            <Button Content="Rating" Margin="10"/>
            <Button Content="Search" Margin="10"/>
            <Button Content="Make A Recipe" Margin="10"/>
            <Button Content="Profile" Margin="10"/>
            <Button Content="Log out" Margin="10"/>

        </StackPanel>

        <!-- Main Content Area -->
        <Border Background="Black" />
        <StackPanel DockPanel.Dock="Right" Background="#b4caec" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="18" FontWeight="Bold"  Margin="10">Logged In!</TextBlock>
            <TextBlock FontSize="16" FontWeight="Bold"  Margin="10">You may now choose a task!</TextBlock>
        </StackPanel>
    </DockPanel>
  
</UserControl>
