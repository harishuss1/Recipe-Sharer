<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RecipeShare.Views.RecipeEditIngredientsView">
  
  <DockPanel LastChildFill="True">
    <StackPanel DockPanel.Dock="Right" Padding="20">
        <TextBlock Text="Edit (Recipe's Name) Ingredients" FontSize="20" FontWeight="Bold"/>
        <TextBox Text="{Binding CurrentRecipe.Name}" Margin="5"/>
        <TextBox Text="{Binding CurrentRecipe.Servings}" Margin="5"/>
        <TextBox Text="{Binding CurrentRecipe.PrepTime}" Margin="5"/>
        <Button Content="Edit Ingredients" Margin="5"/>
        <Button Content="Edit Instructions" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Command="{Binding $parent[Window].DataContext.NavigateToRecipeView}"
              Content="Save"
              x:CompileBindings="False"
              Margin="5"/>
            <Button Command="{Binding $parent[Window].DataContext.NavigateToRecipeView}"
              Content="Cancel"
              x:CompileBindings="False"
              Margin="5"/>
        </StackPanel>
    </StackPanel>
</DockPanel>
</UserControl>
